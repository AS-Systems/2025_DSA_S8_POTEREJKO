<UserControl x:Class="LibraryManager.View.CustomControls.ItemTemplates.BorrowsItemTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryManager.View.CustomControls.ItemTemplates"
             xmlns:conv="clr-namespace:LibraryManager.ViewModel.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">


    <Grid ClipToBounds="True" Margin="0,10,0,0">
        <Grid Margin="40,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="1.4*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1.3*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="{Binding BookCopy.Book.Title}" FontSize="30" Grid.Column="0" TextTrimming="CharacterEllipsis" Margin="0,0,35,0" Foreground="#3a3960" FontWeight="DemiBold" />
            <TextBlock Text="{Binding BookCopy.Owner.Username}" FontSize="30" Grid.Column="1" TextTrimming="CharacterEllipsis" Margin="0,0,15,0" Foreground="#3a3960" FontWeight="DemiBold" />
            <TextBlock Text="{Binding BorrowDate}" FontSize="30" Grid.Column="2" TextTrimming="CharacterEllipsis" Margin="0,0,10,0" Foreground="#3a3960" FontWeight="DemiBold" HorizontalAlignment="Center" />
            <TextBlock Text="{Binding ReturnDate}" FontSize="30" Grid.Column="3" TextTrimming="CharacterEllipsis" Margin="0,0,10,0" Foreground="#3a3960" FontWeight="DemiBold" HorizontalAlignment="Center"/>
            <TextBlock Text="{Binding User.Username}" FontSize="30" Grid.Column="4" TextTrimming="CharacterEllipsis" Margin="0,0,10,0" Foreground="#3a3960" FontWeight="DemiBold" HorizontalAlignment="Center" />
        </Grid>


        <Rectangle Height="4"
               VerticalAlignment="Bottom"
               Stroke="#2e2d4b"
               StrokeThickness="5"
               StrokeDashArray="1,3" Margin="40,0" />
    </Grid>
</UserControl>
