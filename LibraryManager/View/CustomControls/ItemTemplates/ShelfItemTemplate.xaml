<UserControl x:Class="LibraryManager.View.CustomControls.ItemTemplates.ShelfItemTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryManager.View.CustomControls.ItemTemplates"
             mc:Ignorable="d" 
             >
    
    <Grid ClipToBounds="True">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".3*"/>
                <ColumnDefinition Width="1.8*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="{Binding Id}" FontSize="15" Grid.Column="0" TextTrimming="CharacterEllipsis"  Foreground="#3a3960" FontWeight="DemiBold" TextAlignment="Center" />
            <TextBlock Text="{Binding Name}" FontSize="15" Grid.Column="1" TextTrimming="CharacterEllipsis"  Foreground="#3a3960" FontWeight="DemiBold" TextAlignment="Center" />
            <TextBlock Text="{Binding AvailableSpace}" FontSize="15" Grid.Column="2" TextTrimming="CharacterEllipsis"  Foreground="#3a3960" FontWeight="DemiBold" TextAlignment="Center" />
            <TextBlock Text="{Binding Capacity}" FontSize="15" Grid.Column="3" TextTrimming="CharacterEllipsis"  Foreground="#3a3960" FontWeight="DemiBold" TextAlignment="Center" Padding="5,0,0,0" />
        </Grid>


        <Rectangle Height="1"
           VerticalAlignment="Bottom"
           Stroke="#2e2d4b"
           StrokeThickness="1"
           StrokeDashArray="1,3"  />
    </Grid>
</UserControl>
