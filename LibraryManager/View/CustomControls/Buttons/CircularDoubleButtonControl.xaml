<UserControl x:Class="LibraryManager.View.CustomControls.Buttons.CircularDoubleButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryManager.View.CustomControls.Buttons"
             xmlns:cir="clr-namespace:LibraryManager.View.CustomControls"
             mc:Ignorable="d" 
             >
    <Grid Height="70">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="70"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="55,5,35,0">
            <Button x:Name="ButtonBottom"
            BorderThickness="3" BorderBrush="#5e686d" Background="#bec29b"
            Content="Add Book" HorizontalContentAlignment="Center"
            FontSize="16" Padding="0,0,15,0" FontWeight="Bold" Foreground="#3a3960">
                <Button.RenderTransform>
                    <TranslateTransform x:Name="BottomTransform" />
                </Button.RenderTransform>
            </Button>
        </Grid>

        <Grid Grid.Row="0" Grid.ColumnSpan="2" Margin="20,1,35,5">
            <Button x:Name="ButtonTop"
            BorderThickness="3" BorderBrush="#5e686d" Background="#bec29b"
            Content="Add Author" HorizontalContentAlignment="Center"
            FontSize="16" Padding="0,0,5,0" FontWeight="Bold" Foreground="#3a3960">
                <Button.RenderTransform>
                    <TranslateTransform x:Name="TopTransform" />
                </Button.RenderTransform>
            </Button>
        </Grid>
        <cir:CircularButtonControl x:Name="buttonCir" Grid.Column="1" Diameter="70" Grid.RowSpan="2" Width="70" Height="70" ButtonBorderThickness="5" ButtonBorderColor="#5e686d" ButtonBackground="#faffc5" ImageHeight="30" ImageWidth="30" Click="buttonCir_Click" ButtonClickColor="#bec29b" ButtonHoverColor="#fde49e"/>

    </Grid>
</UserControl>
