<Window x:Class="LibraryManager.View.Windows.MainWindow2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:bt="clr-namespace:LibraryManager.View.CustomControls.Buttons"
        xmlns:uc="clr-namespace:LibraryManager.View.CustomControls"
        xmlns:local="clr-namespace:LibraryManager.View.Windows"
        mc:Ignorable="d"
        Title="MainWindow2" Height="800" Width="1400" WindowStyle="None" Background="Transparent" AllowsTransparency="True"  ResizeMode="NoResize">
    
    <Grid>
        <!--Rounding whole window-->
        <Border Background="#3a3960" CornerRadius="35" MouseLeftButtonDown="Border_MouseLeftButtonDown"></Border>
        <Grid>

            <!--Division into left and right part-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="130*"/>
                <ColumnDefinition Width="500*"/>
            </Grid.ColumnDefinitions>
            
            <!--Left part-->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <!-- Title of the window-->
                    <RowDefinition Height="70"/>
                    <!--Buttons-->
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <!--Margin at the bottom-->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--Label and buttons of left column-->
                <Label Grid.Column="0" Grid.Row="0" Content="Library Manager" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" FontSize="35" Foreground="#a9bfa8"> </Label>
                <bt:PageSelectionButton
                    ButtonText="Home" Grid.Column="0" Grid.Row="1"  FontColor="#a9bfa8" ButtonFontSize="35" BackgroundColor="#3a3960" ButtonHoverColor="#595879" />
                <bt:PageSelectionButton
                    ButtonText="Books" Grid.Column="0" Grid.Row="2"  FontColor="#a9bfa8" ButtonFontSize="35" BackgroundColor="#3a3960" ButtonHoverColor="#595879"/>
                <bt:PageSelectionButton
                    ButtonText="Borrows" Grid.Column="0" Grid.Row="3"  FontColor="#a9bfa8" ButtonFontSize="35" BackgroundColor="#3a3960" ButtonHoverColor="#595879"/>
                <bt:PageSelectionButton
                    ButtonText="Users" Grid.Column="0" Grid.Row="4"  FontColor="#a9bfa8" ButtonFontSize="35" BackgroundColor="#3a3960" ButtonHoverColor="#595879"/>
                <bt:PageSelectionButton
                    ButtonText="Storage" Grid.Column="0" Grid.Row="5"  FontColor="#a9bfa8" ButtonFontSize="35" BackgroundColor="#3a3960" ButtonHoverColor="#595879"/>


            </Grid>
            
            <!--Right part-->
            <Grid Grid.Column="1">

                <Grid.RowDefinitions>
                    <!-- Buttons bar -->
                    <RowDefinition Height="70"/>
                    <!-- Yellow part-->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="6.5*"/>
                    <ColumnDefinition Width="2.5*"/>
                    <ColumnDefinition Width="1.1*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <TextBlock Text="Name Surname" FontSize="30" Foreground="#a9bfa8" x:Name="UsernameLabel"/>
                </StackPanel>

            <Border Background="#faffc5" CornerRadius="35" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3">
                    <!--Frame TO DO, as idk how do you want it to work later-->
                    <Frame x:Name="PageHolder" NavigationUIVisibility="Hidden" />
            </Border>

            <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal">
                    <uc:CircularButtonControl Margin="0,0,4,0" Diameter="50" ButtonBorderThickness="3" ImageHeight="20" ImageWidth="20" ButtonBorderColor="#5e686d" ButtonBackground="#dfe4af" ButtonClickColor="#bec29b" ButtonHoverColor="#fde49e"/>
                    <uc:CircularButtonControl Margin="4,0,0,0" Diameter="50" ButtonBorderThickness="3" ImageHeight="20" ImageWidth="20" ButtonBorderColor="#5e686d" ButtonBackground="#dfe4af" ButtonClickColor="#bec29b" ButtonHoverColor="#fde49e"/>
            </StackPanel>
            
            
               
                

                
            </Grid>
            
            
        </Grid>
        
    </Grid>
</Window>
