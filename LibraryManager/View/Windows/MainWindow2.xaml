<Window x:Class="LibraryManager.View.Windows.MainWindow2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:bt="clr-namespace:LibraryManager.View.CustomControls.Buttons"
        xmlns:uc="clr-namespace:LibraryManager.View.CustomControls"
        xmlns:local="clr-namespace:LibraryManager.View.Windows"
        mc:Ignorable="d"
        Title="MainWindow2" Height="450" Width="800" WindowStyle="None" Background="Transparent" AllowsTransparency="True"  ResizeMode="NoResize">
    
    <Grid>
        <!--Rounding whole window-->
        <Border Background="#3a3960" CornerRadius="35" MouseLeftButtonDown="Border_MouseLeftButtonDown"></Border>
        <Grid>

            <!--Division into left and right part-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="500*"/>
            </Grid.ColumnDefinitions>
            
            <!--Left part-->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <!-- Title of the window-->
                    <RowDefinition Height="60"/>
                    <!--Buttons-->
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <!--Margin at the bottom-->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--Label and buttons of left column-->
                <Label Grid.Column="0" Grid.Row="0" Content="Library Manager" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="22" Foreground="#a9bfa8"> </Label>
                <bt:PageSelectionButton
                    ButtonText="Home" Grid.Column="0" Grid.Row="1" Width="200" Height="60" FontColor="#a9bfa8" ButtonFontSize="25" BackgroundColor="#3a3960" ButtonHoverColor="#595879" />
                <bt:PageSelectionButton
                    ButtonText="Books" Grid.Column="0" Grid.Row="2" Width="200" Height="60" FontColor="#a9bfa8" ButtonFontSize="25" BackgroundColor="#3a3960" ButtonHoverColor="#595879"/>
                <bt:PageSelectionButton
                    ButtonText="Lents" Grid.Column="0" Grid.Row="3" Width="200" Height="60" FontColor="#a9bfa8" ButtonFontSize="25" BackgroundColor="#3a3960" ButtonHoverColor="#595879"/>
                <bt:PageSelectionButton
                    ButtonText="Users" Grid.Column="0" Grid.Row="4" Width="200" Height="60" FontColor="#a9bfa8" ButtonFontSize="25" BackgroundColor="#3a3960" ButtonHoverColor="#595879"/>
                <bt:PageSelectionButton
                    ButtonText="Storage" Grid.Column="0" Grid.Row="5" Width="200" Height="60" FontColor="#a9bfa8" ButtonFontSize="25" BackgroundColor="#3a3960" ButtonHoverColor="#595879"/>


            </Grid>
            
            <!--Right part-->
            <Grid Grid.Column="1">
  
                <Grid.RowDefinitions>
                    <!-- Buttons bar -->
                    <RowDefinition Height="60"/>
                    <!-- Yellow part-->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border Background="#faffc5" CornerRadius="35" Grid.Row="1"></Border>
                <uc:CircularButtonControl
                    Grid.Column="1" Grid.Row="0" Diameter="40" ButtonBorderThickness="3" ImageHeight="20" ImageWidth="20" ButtonBorderColor="#5e686d" ButtonBackground="#dfe4af" ButtonClickColor="#bec29b" x:Name="btnClose" Margin="480,-15,-24,0"/>
                <uc:CircularButtonControl
                    Grid.Column="1" Grid.Row="0" Diameter="40" ButtonBorderThickness="3" ImageHeight="20" ImageWidth="20" ButtonBorderColor="#5e686d" ButtonBackground="#dfe4af" ButtonClickColor="#bec29b" x:Name="btnMinimise" Margin="400,-15,-24,0"/>
                
                <!--Frame TO DO, as idk how do you want it to work later-->
                <Frame Grid.Column="1" Grid.Row="1"/>
            </Grid>
            
            
        </Grid>
        
    </Grid>
</Window>
