<Window x:Class="LibraryManager.View.Windows.Edit.EditBookCopy"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManager.View.Windows"
        xmlns:dr="clr-namespace:LibraryManager.View.CustomControls.ImageControls"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="EditBookCopy" Height="550" Width="420" WindowStyle="None" Background="Transparent" AllowsTransparency="True" ResizeMode="NoResize">
    <Grid>
        <Border Background="#faffc5" CornerRadius="35">
            <Grid>
                <!--Window layout-->
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.4*"/>
                    <RowDefinition Height="9.4*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>




                <!--Top bar with window title-->
                <Border Grid.Row="0" Background="#3a3960" CornerRadius="33,33,0,0" MouseLeftButtonDown="Border_MouseLeftButtonDown">
                    <Grid>
                        <!--Top bar layout-->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="1" Content="Edit Book Copy" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Foreground="#a9bfa8" FontSize="25" FontWeight="DemiBold"/>
                    </Grid>
                </Border>

                <Border BorderThickness="5,0,5,5" BorderBrush="#bfbb81" Grid.Row="1" CornerRadius="0,0,31,31" Grid.RowSpan="2"/>
                <!--Window content space Grid-->
                <Grid Grid.Row="1">

                    <!--Window content space Grid layout-->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!--Content grid-->
                    <Grid Grid.Column="1">
                        <!--Grid layout-->
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.2*"/>
                            <RowDefinition Height="1.0*"/>
                            <RowDefinition Height="1.0*"/>
                            <RowDefinition Height="0.5*"/>
                        </Grid.RowDefinitions>



                        <!--Comboboxes grid-->
                        <Grid Grid.Row="1">
                            <!--Grid layout-->
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <!-- To do: Implement custom ComboBoc control-->
                            <ComboBox x:Name="bookBox" Grid.Row="0" Margin="0,5,0,5" HorizontalContentAlignment="Left" 
                                 VerticalContentAlignment="Center" FontSize="20" FontWeight="DemiBold" 
                                 Padding="10,0,0,0" Background="Transparent" Foreground="#3a3960"
                                 BorderThickness="3" BorderBrush="#5e686d"
                                 Text="Book"
                            >
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Title}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                                
                            </ComboBox>

                            <ComboBox x:Name="bookShelfBox" Grid.Row="1" Margin="0,5,0,5" HorizontalContentAlignment="Left" 
                                 VerticalContentAlignment="Center" FontSize="20" FontWeight="DemiBold" 
                                 Padding="10,0,0,0" Background="Transparent" Foreground="#3a3960"
                                 BorderThickness="3" BorderBrush="#5e686d"
                                 Text="BookShelf" SelectionChanged="bookShelfBox_SelectionChanged"
                            >
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <!--To do: Impelment custom TextBox control-->


                        </Grid>
                        <Grid Grid.Row="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <ComboBox x:Name="shelfBox" Grid.Row="0" Margin="0,5,0,5" HorizontalContentAlignment="Left" 
                                VerticalContentAlignment="Center" FontSize="20" FontWeight="DemiBold" 
                                Padding="10,0,0,0" Background="Transparent" Foreground="#3a3960"
                                BorderThickness="3" BorderBrush="#5e686d" Text="Shelf">
                                
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>



                            <Grid Grid.Row="1">
                                <!--Grid layout-->
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- To do: Implement custom ComboBoc control-->
                                <TextBlock Padding="5,0" Grid.Row="0" FontSize="22" FontWeight="Bold" 
                                    Background="Transparent" Foreground="#3a3960"
                                    Text="Available:" VerticalAlignment="Center"/>


                                <!--To do: Impelment custom TextBox control-->
                                <CheckBox Grid.Column="1" IsChecked="True" x:Name="availableBox"
                                VerticalAlignment="Center" HorizontalAlignment="Center"
                                FontSize="24">
                                    <CheckBox.LayoutTransform>
                                        <ScaleTransform ScaleX="3" ScaleY="3"/>
                                    </CheckBox.LayoutTransform>
                                </CheckBox>

                            </Grid>

                        </Grid>


                            <!--Button grid-->
                        <Grid Grid.Row="3">
                            <!--Grid layout-->
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Margin="10" Content="Discard" 
                                FontWeight="DemiBold" FontSize="20" Foreground="#3a3960" 
                                BorderThickness="3" BorderBrush="#5e686d" Background="Transparent"
                                Click="CloseBTN_Click"
                                />
                            <!--To do: Impelment custom Button control-->

                            <Button x:Name="saveBtn" Grid.Column="1" Margin="10" Content="Save" 
                                FontWeight="DemiBold" FontSize="20" Foreground="#3a3960" 
                                BorderThickness="3" BorderBrush="#5e686d" Background="#bec29b" Click="saveBtn_Click"/>
                        </Grid>
                    </Grid>
                </Grid>

            </Grid>
        </Border>
    </Grid>
</Window>
