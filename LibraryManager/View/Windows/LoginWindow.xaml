<Window x:Class="LibraryManager.View.Windows.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManager.View.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
         Title="LoginWindow" Height="400" Width="350" WindowStyle="None" Background="Transparent" AllowsTransparency="True" ResizeMode="NoResize">
    <Grid>
        <Border Background="#faffc5" CornerRadius="35">
            <Grid>
                <!--Window layout-->
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.4*"/>
                    <RowDefinition Height="9.4*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--Top bar with window title-->
                <Border Grid.Row="0" Background="#3a3960" CornerRadius="33,33,0,0" MouseLeftButtonDown="Border_MouseLeftButtonDown">
                    <Grid>
                        <!--Top bar layout-->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="1" Content="Login" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Foreground="#a9bfa8" FontSize="25" FontWeight="DemiBold"/>
                    </Grid>
                </Border>

                <!--Window content space Grid-->
                <Grid Grid.Row="1">

                    <!--Window content space Grid layout-->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!--Content grid-->
                    <Grid Grid.Column="1">
                        <!--Grid layout-->
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="0.7*"/>
                        </Grid.RowDefinitions>


                        <!--TextBox grid-->
                        <Grid Grid.Row="0">
                            <!--Grid layout-->
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBox x:Name="UsernameBox" Grid.Row="0" Margin="0,25,0,25" HorizontalContentAlignment="Left" 
                                 VerticalContentAlignment="Center" FontSize="20" FontWeight="DemiBold" 
                                 Padding="10,0,0,0" Background="Transparent" Foreground="#3a3960"
                                 BorderThickness="3" BorderBrush="#5e686d"
                                 Text="Username"
                                     GotFocus="UsernameBox_GotFocus"
                                     LostFocus="UsernameBox_LostFocus"
                        />
                            <!--To do: Impelment custom TextBox control-->

                            <TextBox x:Name="PasswordBox" Grid.Row="1" Margin="0,5,0,45" HorizontalContentAlignment="Left" 
                                VerticalContentAlignment="Center" FontSize="20" FontWeight="DemiBold" 
                                Padding="10,0,0,0" Background="Transparent" Foreground="#3a3960"
                                BorderThickness="3" BorderBrush="#5e686d"
                                Text="Password"
                                     GotFocus="PasswordBox_GotFocus"
                                     LostFocus="PasswordBox_LostFocus"
                        />
                        </Grid>

                        <!--Button grid-->
                        <Grid Grid.Row="2">

                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <Button x:Name="LoginBTN" Grid.Row="0" Margin="50,8,50,8" Content="Login" 
                                FontWeight="DemiBold" FontSize="20" Foreground="#3a3960" 
                                BorderThickness="3" BorderBrush="#5e686d" Background="#bec29b"
                                    Click="LoginBTN_Click"
                                    />

                            <Button Grid.Row="1"  Margin="50,8,50,8" Content="Exit" 
                                FontWeight="DemiBold" FontSize="20" Foreground="#3a3960" 
                                BorderThickness="3" BorderBrush="#5e686d" Background="Transparent" Click="Button_Click"/>
                        </Grid>
                    </Grid>
                </Grid>

            </Grid>
        </Border>
    </Grid>
</Window>
