<Page x:Class="LibraryManager.View.Pages.BooksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryManager.View.Pages"
      xmlns:it="clr-namespace:LibraryManager.View.CustomControls.ItemTemplates"
      xmlns:btn="clr-namespace:LibraryManager.View.CustomControls.Buttons"
      xmlns:cf="clr-namespace:LibraryManager.View.CustomControls.ColumnFilters"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BooksPage">

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height=".7*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>

        <Grid>
            <Border Background="#bec29b" CornerRadius="30,30,0,0">
                <Grid Margin="40,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="1.4*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1.3*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <cf:PageCountColumnFilter Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Bottom" Padding="0,0,0,5" FilterTextChanged="PageCountColumnFilter_FilterTextChanged" OperationChanged="PageCountColumnFilter_OperationChanged"/>
                    <cf:TitleColumnFilter Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Padding="0,0,0,5" FilterTextChanged="TitleColumnFilter_FilterTextChanged"/>
                    <cf:AuthorColumnFilter Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Bottom" Padding="0,0,0,5" FilterTextChanged="AuthorColumnFilter_FilterTextChanged"/>
                    <cf:AvailableColumnFilter Grid.Column="4" HorizontalAlignment="Left" VerticalAlignment="Bottom" Padding="0,0,0,5" AvailabilityChanged="AvailableColumnFilter_AvailabilityChanged"  />

                    <TextBlock Text="Genre" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="25" FontWeight="DemiBold" Foreground="#5e686d" Padding="0,0,0,5"/>
                
                </Grid>
            </Border>
            <Rectangle Height="4" VerticalAlignment="Bottom" Stroke="#2e2d4b" StrokeThickness="5" Margin="35,0"/>
        </Grid>

        <Grid Grid.Row="1">
            <ListBox ItemsSource="{Binding FilteredBooks,Mode=TwoWay}" SelectedItem="{Binding SelectedBook, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectionMode="Single" Background="Transparent" BorderThickness="0"  ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.CanContentScroll="False">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <it:BookItemTemplate/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".8*"/>
                    <ColumnDefinition Width="7*"/>
                    <ColumnDefinition Width="2.5*"/>
                </Grid.ColumnDefinitions>

                <StackPanel  Grid.Column="1" Orientation="Horizontal">
                    <btn:ItemActionButtonControl x:Name="ItemInfo" ButtonText="Info" ButtonClick="ItemInfo_ButtonClick"/>
                    <btn:ItemActionButtonControl x:Name="ItemEdit" Margin="15,0" ButtonText="Edit" ButtonClick="ItemEdit_ButtonClick"/>
                    <btn:ItemActionButtonControl x:Name="ItemDelete" ButtonText="Delete" ButtonBackgroundColor="#bec29b" ButtonClick="ItemDelete_ButtonClick"/>
                </StackPanel>
                

            </Grid>

            <Grid Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,60,0">
                <btn:CircularDoubleButtonControl ButtonBottomClick="CircularDoubleButtonControl_ButtonBottomClick" ButtonTopClick="CircularDoubleButtonControl_ButtonTopClick" ButtonMiddleClick="CircularDoubleButtonControl_ButtonMiddleClick"/>
            </Grid>
            
        </Grid>

    </Grid>
</Page>
