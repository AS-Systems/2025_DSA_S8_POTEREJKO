<Page x:Class="LibraryManager.View.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryManager.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="300"
      Title="LoginPage">

    <Grid>

        <Grid>
            <!--Window content space Grid-->
            <Grid >
                <!--Content grid-->
                <Grid >
                    <!--Grid layout-->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="0.7*"/>
                    </Grid.RowDefinitions>


                    <!--TextBox grid-->
                    <Grid Grid.Row="0">
                        <!--Grid layout-->
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBox x:Name="UsernameBox" Grid.Row="0" Margin="0,25,0,25" HorizontalContentAlignment="Left" 
                                 VerticalContentAlignment="Center" FontSize="20" FontWeight="DemiBold" 
                                 Padding="10,0,0,0" Background="Transparent" Foreground="#3a3960"
                                 BorderThickness="3" BorderBrush="#5e686d"
                                 Text="Username" LostFocus="UsernameBox_LostFocus"
                                 GotFocus="UsernameBox_GotFocus"
                        />
                        <!--To do: Impelment custom TextBox control-->

                        <TextBox x:Name="PasswordBox" Grid.Row="1" Margin="0,5,0,45" HorizontalContentAlignment="Left" 
                                VerticalContentAlignment="Center" FontSize="20" FontWeight="DemiBold" 
                                Padding="10,0,0,0" Background="Transparent" Foreground="#3a3960"
                                BorderThickness="3" BorderBrush="#5e686d"
                                Text="Password" GotFocus="PasswordBox_GotFocus"
                                LostFocus="PasswordBox_LostFocus"
                                 />
                    </Grid>

                    <!--Button grid-->
                    <Grid Grid.Row="1">

                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Button x:Name="LoginBTN" Grid.Row="0" Margin="50,8,50,8" Content="Login" 
                                FontWeight="DemiBold" FontSize="20" Foreground="#3a3960" 
                                BorderThickness="3" BorderBrush="#5e686d" Background="#bec29b"
                                   Click="LoginBTN_Click"
                                    />
                        <Popup x:Name="LoginPopup" PlacementTarget="{Binding ElementName=LoginBTN}" Placement="Top" StaysOpen="True" AllowsTransparency="True" PopupAnimation="Fade"  IsOpen="{Binding LoginPopVisibility,UpdateSourceTrigger=PropertyChanged}" VerticalOffset="-10">
                            <Border Background="#bec29b" Height="40"  CornerRadius="15" BorderBrush="#3a3960" BorderThickness="3" >
                                <TextBlock Margin="6" Text="Wrong password or username!" Foreground="#3a3960" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                            </Border>
                        </Popup>


                        <Button Grid.Row="1"  Margin="50,8,50,8" Content="Exit" 
                                FontWeight="DemiBold" FontSize="20" Foreground="#3a3960" 
                                BorderThickness="3" BorderBrush="#5e686d" Background="Transparent" Click="Button_Click" />
                    </Grid>
                </Grid>
            </Grid>

        </Grid>
    </Grid>
</Page>
